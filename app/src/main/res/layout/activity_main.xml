<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:id="@+id/pdfImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:contentDescription="@null"
            android:scaleType="fitCenter" />
    <LinearLayout
            android:id="@+id/pdfLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toTopOf="parent">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/titlebar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTitleBar">
            <TextView
                    android:id="@+id/pdf_name_text_view"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/pdf_name"
                    android:textSize="32sp"
                    android:textColor="@color/colorTitleBarTitle"/>
            <ImageView
                    android:id="@+id/titlebar_pencil_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="320dp"
                    android:background="@mipmap/pencil"
                    android:scaleX=".75"
                    android:scaleY=".75"/>
            <ImageView
                    android:id="@+id/titlebar_highlighter_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/highlighter"
                    android:scaleX=".75"
                    android:scaleY=".75"/>
            <ImageView
                    android:id="@+id/titlebar_eraser_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@mipmap/eraser"
                    android:scaleX=".75"
                    android:scaleY=".75"/>
            <ImageView
                    android:id="@+id/titlebar_undo_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/undo"
                    android:scaleX=".75"
                    android:scaleY=".75"/>
            <ImageView
                    android:id="@+id/titlebar_redo_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/redo"
                    android:scaleX=".75"
                    android:scaleY=".75"/>

        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/pdfLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/statusbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorTitleBar">
            <ImageView
                    android:id="@+id/statusbar_prev_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/prev"
                    android:scaleX=".75"
                    android:scaleY=".75"/>
            <ImageView
                    android:id="@+id/statusbar_next_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/next"
                    android:scaleX=".75"
                    android:scaleY=".75"/>
            <ImageView
                    android:id="@+id/statusbar_zoom_in_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/zoom_in"
                    android:scaleX=".75"
                    android:scaleY=".75"/>
            <ImageView
                    android:id="@+id/statusbar_zoom_out_image"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@mipmap/zoom_out"
                    android:scaleX=".75"
                    android:scaleY=".75"/>
            <TextView
                    android:id="@+id/statusbar_page_text"
                    android:layout_height="fill_parent"
                    android:layout_width="fill_parent"
                    android:text="@string/pdf_name"
                    android:textSize="32sp"
                    android:textColor="@color/colorTitleBarTitle"
                    android:gravity="end"/>
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>